@model Contacto

@{
    ViewData["title"] = "Contactos - Crear";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contacto" asp-action="Inicio">Lista</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Crear</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Crear","Contacto")" method="post">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="nombre" placeholder="Ingrese el nombre" />
                        <br />
                        <label>Correo</label>
                        <input type="text" class="form-control" name="correo" placeholder="Ejemplo@gmail.com" />
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button type="submit" class="btn btn-success">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
